{
	"compilerOptions": {
		"target": "ES2019",
		"module": "CommonJS",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true
	},
	"include": [
		"auth/**/*.ts",
		"config/**/*.ts",
		"controllers/**/*.ts",
		"docker/**/*.ts",
		"helper/**/*.ts",
		"middlewares/**/*.ts",
		"misc/**/*.ts",
		"models/**/*.ts",
		"routes/**/*.ts",
		"test/**/*.ts",
		"server.ts",
		"prisma/**/*.*",
	],
	"exclude": [
        "node_modules/**/*", 
        ".vscode/**/*", 
        ".idea/**/*"]
}
